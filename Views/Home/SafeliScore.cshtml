@{
    ViewData["Title"] = "SafeliScore";
}

<link href="~/css/tu-archivo.css" rel="stylesheet">

<div class="feedback-header">

    <h2>Feedback</h2>
    <h4>Rankea caminos/barrios</h4>
</div>


<div class="feedback-container">
    <div class="card feedback-card">
        <div class="card-body">
            
            <form method="post" action='@Url.Action("Feedback", "Home")'>
                <h3 id="tituloDisplay" style="display: none; cursor: pointer;" title="Haz clic para editar el título"></h3>

                <input type="text" id="tituloInput" placeholder="Título del feedback" value="">

                <textarea id="reviewTexto" placeholder="Escribe tu review aquí..."></textarea>

                <div class="review-row">
                    
                    <div class="rating">
                        <input value="5" name="rating" id="star5" type="radio">
                        <label for="star5"></label>
                        <input value="4" name="rating" id="star4" type="radio">
                        <label for="star4"></label>
                        <input value="3" name="rating" id="star3" type="radio">
                        <label for="star3"></label>
                        <input value="2" name="rating" id="star2" type="radio">
                        <label for="star2"></label>
                        <input value="1" name="rating" id="star1" type="radio">
                        <label for="star1"></label>
                    </div>
                    <div class = "button-row">
                        <button type="submit" class="btn btn-primary ms-auto">Enviar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>


</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
    
    var inputTitulo = document.getElementById("tituloInput");
    var displayTitulo = document.getElementById("tituloDisplay");
    var reviewTexto = document.getElementById("reviewTexto");

    inputTitulo.addEventListener("keydown", function(event) {
        
        if (event.key === "Enter" || event.keyCode === 13) {
            event.preventDefault();
            var tituloEscrito = inputTitulo.value;
        
            if (tituloEscrito.trim() !== "") {
                displayTitulo.textContent = tituloEscrito;
                inputTitulo.style.display = "none";
                displayTitulo.style.display = "block"; 
                reviewTexto.focus();
            } else {
                 reviewTexto.focus();
            }
        }
    });

    displayTitulo.addEventListener("click", function() {
        displayTitulo.style.display = "none";
        inputTitulo.style.display = "block";
        inputTitulo.focus();
        inputTitulo.select();
    });
});
</script>
