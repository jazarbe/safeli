@{
    ViewData["Title"] = "Log In";
}

@if(ViewBag.mensaje != null)
{
    <h1 class="error">@ViewBag.mensaje</h1>
}

<form method="post" action='@Url.Action("LogIn", "Account")'>
   <!-- hacer que los 2 inputs tengan el mismo tamaño !!! -->
   <div class = "input-center">
        <input type = "text" name="email" placeholder ="Ingrese su Email"/> 
        <div class="passw">
            <input type = "password" name="password" placeholder ="Ingrese su Contraseña"/>
            <i class="fa-solid fa-eye toggle-password" id="togglePassword"></i> <br> 
            <!-- NO FUNCIONA OJO DE CONTRA -->
        </div>
    </div>
    
    <div class = "logIn_Href">
        <a href='@Url.Action("ForgotPassword", "Account")'>¿Te olvidaste la contraseña?</a><br>
    </div>
    
    <div class = "checkbox-div">
        <input type="checkbox"> Mantenerme iniciado/a 
    </div>

    <div class = "inicio-button">
        <button type="submit">Iniciar Sesión</button><br>
    </div>

    <h3>¿Todavía no tenes cuenta?</h3>
    <a href='@Url.Action("SignUp", "Account")'>Registrate</a>
</form>

